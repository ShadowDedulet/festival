<h1>Текущая сессия</h1>
  <p id="notice"><%= notice %></p>
  <% if session[:login] %>
    <p><strong>ФИО: </strong><%= @user.fcs %></p>
    <p><strong>Возраст: </strong><%= @user.age %></p>
    <p><strong>Тип документа: </strong><%= @user.document_type %></p>
    <p><strong>Номер документа: </strong><%= @user.document_number %></p>
      <%= form_with(url: login_path, method: :delete) do %>
        <%= submit_tag("Выйти") %>
      <% end %>
    </p>
      <% else %>
        <%= form_with(url: "/login") do %>
          <%= label_tag(:login, "Имя") %>
          <%= text_field_tag(:login) %>
          <%= label_tag(:login, "Пароль") %>
          <%= password_field_tag(:password) %>
          <%= submit_tag("Вход") %>
        <% end %>
      <% end %>
