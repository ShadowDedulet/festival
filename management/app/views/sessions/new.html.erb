<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>
<%= form_with url: sessions_path, method: :post do |f| %>
  <p><%= f.text_field :login %><br></p>
  <p><%= f.password_field :password %><br></p>
  <p><%= f.submit "Sign In!" %></p>

  <p><%= link_to "Sign Up", new_user_path %></p>
<% end %>