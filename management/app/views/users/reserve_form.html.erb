<h1>Бронирование билета</h1>

<%= form_with url: user_reserve_path, method: :get do |form| %>

  <p>
  <%= form.label :ticket_type_0, "Fan zone" %>
  <%= form.radio_button :ticket_type, "0", required: true %>

  <%= form.label :ticket_type_1, "VIP zone" %>
  <%= form.radio_button :ticket_type, "2" %>
  </p>

  <p>
  <%= form.label :event_date, "Дата события" %>
  <%= form.datetime_local_field :event_date, required: true %>
  </p>

  <p>
  <%= form.submit "Забронировать" %>
  </p>

<% end%>